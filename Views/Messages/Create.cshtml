<button class="MessageSend" data-id="@Model.Reciver"> Send message </button>



@*Ajax call på skicka-meddelande-knapp*@
@section Scripts {
    <script>
        $('.MessageSend').click(function () {
            var ReciverID = $(this).data('id');
            var content = $('#CONTENT').val();
            var sender = $('#SENDER').val();
            var title = $('#TITLE').val();
            if (content.length < 3 || sender.length < 2) {
                window.alert('Please check all fields')
            }
            else
                $.get('/api/SendAPI/' + ReciverID + '/' + title + '/' + content + '/' + sender, function () { 
                window.alert('Message sent');
                window.location.reload();
            })
        });

    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
